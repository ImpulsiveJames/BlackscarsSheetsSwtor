                        <dt>
                            @Html.DisplayNameFor(m => m.Character.Initiative)
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.Character.Initiative)
                        </dd>                        
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading"><span class="glyphicon glyphicon-book"></span>&nbsp;Skills</div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
