@model Telvee32.BlackscarsSheetsSwtor.UI.Models.CharacterViewModels.CharacterSheetViewModel

@{
    ViewData["Title"] = $"Character Sheet for {Model.Character.Nickname}";
}

<h2>Character sheet for @Model.Character.Name&nbsp;(@Model.Character.Nickname)</h2>
<hr />
<div>
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading"><span class="glyphicon glyphicon-info-sign"></span>&nbsp;Basic info</div>
                <div class="panel-body">
                    @Html.ActionLink("Edit basic info", "BasicInfo", "Character", new { characterId = Model.Character.Id })
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(m => m.Character.Name)
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.Character.Name)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(m => m.Character.Nickname)
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.Character.Nickname)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(m => m.Character.AgeYears)
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.Character.AgeYears)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(m => m.Character.Species)
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.Character.Species)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(m => m.Character.Homeworld)
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.Character.Homeworld)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(m => m.Character.Rank)
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.Character.Rank)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(m => m.Character.Completed)
                        </dt>
                        <dd>
                            @(Model.Character.Completed ? "Yes" : "No")
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(m => m.Character.Approved)
                        </dt>
                        <dd>
                            @(Model.Character.Approved ? "Yes" : "No")
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading"><span class="glyphicon glyphicon-education"></span>&nbsp;Attributes</div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(m => m.Character.Attribute.Intelligence)
                        </dt>
                        <dd>
                            @Html.DisplayFor(m => m.Character.Attribute.Intelligence)
                        </dd>
